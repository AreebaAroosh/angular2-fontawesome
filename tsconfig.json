{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": true,
    "outDir": "./lib",
    "declaration": true
  },
  "compileOnSave": true,
  "filesGlob": [
    "components.d.ts",
    "directives.d.ts"
  ],
  "files": [
    "components.d.ts",
    "directives.d.ts"
  ],
  "atom": {
    "rewriteTsconfig": true
  }
}
